<div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
  <h2>Change your password</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "well", :role => "form"}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "New Password" %>
      <%= f.password_field :password, :class => "form-control", :placeholder => "Enter your desired password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "New Password Confirmation" %>
      <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Enter your desired password" %>
    </div>

    <%= f.submit "Change my password", :class => "btn btn-default" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
