<div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
  <h2>Resend unlock instructions</h2>

  <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => {:method => :post, :class => "well", :role => "form"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :autofocus => true, :class => "form-control", :placeholder => "Enter your email" %>
    </div>

    <%= f.submit "Resend unlock instructions", :class => "btn btn-default" %>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
