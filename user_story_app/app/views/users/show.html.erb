<div id="current-user" data-user="<%= @user.to_json %>">

  <h3><%= @user.name %>'s Goals</h3>
  <form id="user_story_form" style="display:none;">
    <div>
      <label>As a:</label>
      <input id="as_a" type="text" name="as_a" required>
    </div>
    <div>
      <label>I want to:</label>
      <input id="i_want_to" type="text" name="i_want_to" required>
    </div>
    <div>
      <label>So I can:</label>
      <input id="so_i_can" type="text" name="so_i_can" required>
    </div>
    <div>
      <input id="submit" type="submit" class="btn btn-default btn-small">
    </div>
  </form>

  <div class="modal fade" id="edit-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <form>
            <div>
              <label>As a:</label>
              <input id="as_a_edit" type="text" name="as_a" value=>
            </div>
            <div>
              <label>I want to:</label>
              <input id="i_want_to_edit" type="text" name="i_want_to" value="">
            </div>
            <div>
              <label>So I can:</label>
              <input id="so_i_can_edit" type="text" name="so_i_can" value="">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="update_story_button" type="submit" value="Update story" class="btn btn-primary">Save changes</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</div>
<h3 id="subtitle"></h3>
<div id="breadcrumbs"><span id="dashboard-link">Dashboard</span><i> / </i><span id="add-story">Add</span></div>

<div id="tiles-container"></div>
